<UserControl x:Class="KarateTournamentApp.Views.IndividualJudgeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateTournamentApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#F0F0F0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Panel Sedziowski" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CategoryName}" 
                           FontSize="18" 
                           Foreground="#95a5a6"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Panel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Current Participant Info -->
                <Border Background="White" CornerRadius="5" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Aktualny zawodnik" 
                                   FontSize="16" 
                                   Foreground="#7f8c8d"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CurrentParticipantName}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Final Score Display -->
                        <Border Background="#E8F5E9" 
                                BorderBrush="#27AE60" 
                                BorderThickness="2"
                                CornerRadius="5" 
                                Padding="15"
                                Visibility="{Binding IsParticipantFinished, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Wynik koncowy (suma): " 
                                           FontSize="24" 
                                           FontWeight="SemiBold"
                                           Foreground="#27AE60"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding FinalScore, StringFormat={}{0:F2}}" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Score Entry Panel -->
                <Border Background="White" CornerRadius="5" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Wprowadzanie ocen sedziow" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Manual Score Entry -->
                        <GroupBox Header="Wprowadz ocene" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBox x:Name="ScoreTextBox"
                                         Text="{Binding ScoreInput, UpdateSourceTrigger=PropertyChanged}" 
                                         FontSize="20"
                                         Padding="10"
                                         Margin="0,0,0,10"/>
                                <Button Content="Dodaj ocene" 
                                        Command="{Binding AddScoreCommand}"
                                        Background="#3498DB"
                                        Foreground="White"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Padding="15,10"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Current Judge Scores -->
                        <GroupBox Header="Oceny sedziow" Padding="15" Margin="0,15,0,0">
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding JudgeScores}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#3498DB" 
                                                    CornerRadius="5" 
                                                    Padding="15,10"
                                                    Margin="5">
                                                <TextBlock Text="{Binding StringFormat={}{0:F1}}" 
                                                           FontSize="20"
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                    <Button Content="Pokaz wynik koncowy" 
                                            Command="{Binding ShowFinalScoreCommand}"
                                            Background="#F39C12"
                                            Foreground="White"
                                            FontWeight="SemiBold"
                                            Padding="15,10"
                                            Margin="0,0,10,0"
                                            Cursor="Hand"/>
                                    
                                    <Button Content="Usun ostatnia ocene" 
                                            Command="{Binding RemoveLastScoreCommand}"
                                            Background="#E74C3C"
                                            Foreground="White"
                                            FontWeight="SemiBold"
                                            Padding="15,10"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Control Buttons -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="15" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Nastepny zawodnik" 
                        Command="{Binding FinishParticipantCommand}"
                        Background="#27AE60" 
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Padding="30,15"
                        Margin="10"
                        Cursor="Hand"/>
                
                <Button Content="Pokaz wyniki" 
                        Command="{Binding ShowResultsCommand}"
                        Background="#9B59B6" 
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Padding="30,15"
                        Margin="10"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
