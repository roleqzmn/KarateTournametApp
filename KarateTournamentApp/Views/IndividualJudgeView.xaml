<UserControl x:Class="KarateTournamentApp.Views.IndividualJudgeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateTournamentApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#F0F0F0">
    <UserControl.Resources>
        <Style x:Key="QuickScoreButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1ABC9C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#16A085"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Panel Sedziowski - Konkurencja Indywidualna" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CategoryName}" 
                           FontSize="18" 
                           Foreground="#95a5a6"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Panel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Current Participant Info -->
                <Border Background="White" CornerRadius="5" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Aktualny zawodnik" 
                                   FontSize="16" 
                                   Foreground="#7f8c8d"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CurrentParticipantName}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Final Score Display -->
                        <Border Background="#E8F5E9" 
                                BorderBrush="#27AE60" 
                                BorderThickness="2"
                                CornerRadius="5" 
                                Padding="15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Wynik koncowy: " 
                                           FontSize="24" 
                                           FontWeight="SemiBold"
                                           Foreground="#27AE60"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding FinalScore, StringFormat={}{0:F2}}" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Score Entry Panel -->
                <Border Background="White" CornerRadius="5" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Wprowadzanie ocen sedziow" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Manual Score Entry -->
                        <GroupBox Header="Wprowadz ocene" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBox x:Name="ScoreTextBox"
                                         Text="{Binding ScoreInput, UpdateSourceTrigger=PropertyChanged}" 
                                         FontSize="20"
                                         Padding="10"
                                         Margin="0,0,0,10"/>
                                <Button Content="Dodaj ocene" 
                                        Command="{Binding AddScoreCommand}"
                                        Background="#3498DB"
                                        Foreground="White"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Padding="15,10"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Quick Score Buttons -->
                        <GroupBox Header="Szybkie oceny" Padding="15">
                            <WrapPanel HorizontalAlignment="Center">
                                <Button Content="6.0" Command="{Binding AddQuickScoreCommand}" CommandParameter="6.0" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="6.5" Command="{Binding AddQuickScoreCommand}" CommandParameter="6.5" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="7.0" Command="{Binding AddQuickScoreCommand}" CommandParameter="7.0" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="7.5" Command="{Binding AddQuickScoreCommand}" CommandParameter="7.5" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="8.0" Command="{Binding AddQuickScoreCommand}" CommandParameter="8.0" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="8.5" Command="{Binding AddQuickScoreCommand}" CommandParameter="8.5" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="9.0" Command="{Binding AddQuickScoreCommand}" CommandParameter="9.0" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="9.5" Command="{Binding AddQuickScoreCommand}" CommandParameter="9.5" Style="{StaticResource QuickScoreButtonStyle}"/>
                                <Button Content="10.0" Command="{Binding AddQuickScoreCommand}" CommandParameter="10.0" Style="{StaticResource QuickScoreButtonStyle}"/>
                            </WrapPanel>
                        </GroupBox>

                        <!-- Current Judge Scores -->
                        <GroupBox Header="Oceny sedziow" Padding="15" Margin="0,15,0,0">
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding JudgeScores}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#3498DB" 
                                                    CornerRadius="5" 
                                                    Padding="15,10"
                                                    Margin="5">
                                                <TextBlock Text="{Binding StringFormat={}{0:F1}}" 
                                                           FontSize="20"
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <Button Content="Usun ostatnia ocene" 
                                        Command="{Binding RemoveLastScoreCommand}"
                                        Background="#E74C3C"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        Padding="10"
                                        Margin="0,15,0,0"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Control Buttons -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="15" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Zakoncz tego zawodnika" 
                        Command="{Binding FinishParticipantCommand}"
                        Background="#27AE60" 
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Padding="30,15"
                        Margin="10"
                        Cursor="Hand"/>
                
                <Button Content="Pokaz wyniki" 
                        Command="{Binding ShowResultsCommand}"
                        Background="#9B59B6" 
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Padding="30,15"
                        Margin="10"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
