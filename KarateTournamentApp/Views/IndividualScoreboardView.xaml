<UserControl x:Class="KarateTournamentApp.Views.IndividualScoreboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateTournamentApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#1a1a1a">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="{Binding CategoryName}" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CategoryType}" 
                           FontSize="24" 
                           Foreground="#95a5a6"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Progress indicator -->
            <Border Grid.Row="0" Background="#34495E" Margin="40,40,40,20" Padding="20" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Zawodnik" 
                               FontSize="24" 
                               Foreground="#95a5a6"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ProgressText}" 
                               FontSize="48" 
                               FontWeight="Bold"
                               Foreground="#1ABC9C"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Participant info and score -->
            <Border Grid.Row="1" Background="#2C3E50" Margin="40,0,40,40" Padding="40" CornerRadius="10">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentParticipantName}" 
                               FontSize="64" 
                               FontWeight="Bold" 
                               Foreground="White"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="{Binding CurrentParticipantClub}" 
                               FontSize="32" 
                               Foreground="#95a5a6"
                               TextAlignment="Center"
                               Margin="0,0,0,60"/>

                    <!-- Final Score Display -->
                    <Border Background="#27AE60" 
                            CornerRadius="15" 
                            Padding="40,30"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="WYNIK" 
                                       FontSize="28" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding FinalScore, StringFormat={}{0:F2}}" 
                                       FontSize="96" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="15">
            <TextBlock Text="Karate Tournament Manager - Individual Competition" 
                       FontSize="20" 
                       Foreground="#95a5a6"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
