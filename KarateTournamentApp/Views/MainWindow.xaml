<Window x:Class="KarateTournamentApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:KarateTournamentApp"
xmlns:converters="clr-namespace:KarateTournamentApp.Converters"
xmlns:models="clr-namespace:KarateTournamentApp.Models"
xmlns:system="clr-namespace:System;assembly=System.Runtime"
mc:Ignorable="d"
Title="Karate Tournament Manager" Height="917" Width="1524" Background="#F0F0F0">

    <Window.Resources>
        <ObjectDataProvider x:Key="BeltsEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Belts"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="SexEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Sex"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:ExpanderIconConverter x:Key="ExpanderIconConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="191*"/>
        </Grid.ColumnDefinitions>
        <ToggleButton x:Name="MenuToggle"
                      Width="40" 
                      Height="60"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      Margin="5,5,0,0"
                      Background="#2C3E50"
                      Foreground="White"
                      BorderThickness="0"
                      Cursor="Hand"
                      Panel.ZIndex="1000">
            <ToggleButton.Style>
                <Style TargetType="ToggleButton">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        Padding="8">
                                    <TextBlock Text="☰" 
                                               FontSize="24" 
                                               FontWeight="Bold"
                                               Foreground="{TemplateBinding Foreground}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#34495E"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#1ABC9C"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>

        <!-- Left side menu  -->
        <Border x:Name="SideMenu"
                Width="200"
                HorizontalAlignment="Left"
                Background="#2C3E50"
                BorderThickness="0,0,2,0"
                BorderBrush="#1ABC9C"
                Panel.ZIndex="999"
                Visibility="{Binding IsChecked, ElementName=MenuToggle, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel Margin="0,70,0,0">
                <!-- Import -->
                <Button Command="{Binding ImportCommand}"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,12"
                        Margin="10,5"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📥" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Import" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Export -->
                <Button Command="{Binding ExportCommand}"
                        Background="#E67E22"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,12"
                        Margin="10,5"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Export" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CA6F1E"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Separator -->
                <Separator Margin="10,10" Background="#34495E"/>

                <!-- Import XML -->
                <Button Command="{Binding ImportXmlCommand}"
                        Background="#8E44AD"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,12"
                        Margin="10,5"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📄" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Import XML" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7D3C98"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Create XML Template -->
                <Button Command="{Binding CreateXmlTemplateCommand}"
                        Background="#16A085"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,12"
                        Margin="10,5"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Szablon XML" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#138D75"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Separator -->
                <Separator Margin="10,10" Background="#34495E"/>

                <!-- Import Excel -->
                <Button Command="{Binding ImportExcelCommand}"
                        Background="#2ECC71"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,12"
                        Margin="10,5"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Import Excel" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#27AE60"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Create Excel Template -->
                <Button Command="{Binding CreateExcelTemplateCommand}"
                        Background="#1ABC9C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,12"
                        Margin="10,5"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📑" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Szablon Excel" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#17A689"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main part -->
        <Grid Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="15" BorderBrush="#DDD" BorderThickness="1" Margin="32,0,1164,0" Grid.ColumnSpan="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-6,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Rejestracja Zawodnika" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"/>

                        <Border Background="#FFF9E6" BorderBrush="#FFD700" BorderThickness="2" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Rodzaj podziału:" FontWeight="Bold" Margin="0,0,0,8" Foreground="#E67E22"/>
                                <CheckBox Content="Podział według wieku" 
                                      IsChecked="{Binding DivideByAge, Mode=TwoWay}" 
                                      Margin="0,3" FontWeight="SemiBold"/>
                                <CheckBox Content="Podział według pasów" 
                                      IsChecked="{Binding DivideByBelt, Mode=TwoWay}" 
                                      Margin="0,3" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Imię:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

                        <TextBlock Text="Nazwisko:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

                        <TextBlock Text="Wiek:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

                        <TextBlock Text="Płeć (obowiązkowa):" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding Source={StaticResource SexEnum}}" 
                              SelectedItem="{Binding SelectedSex}" Margin="0,5,0,15" Padding="5"/>

                        <TextBlock Text="Stopień (Pas):" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding Source={StaticResource BeltsEnum}}" 
                              SelectedItem="{Binding SelectedBelt}" Margin="0,5,0,15" Padding="5"/>

                        <TextBlock Text="Konkurencje (min. jedna):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding CategorySelections}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DisplayName}" 
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                          Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Klub (opcjonalnie):" Margin="0,15,0,5" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Club}" Margin="0,0,0,20" Padding="5"/>

                        <Button Content="DODAJ ZAWODNIKA" 
                            Command="{Binding AddParticipantCommand}" 
                            Height="40" Background="#27AE60" Foreground="White" FontWeight="Bold" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Konkurencje" FontSize="20" FontWeight="Bold" Margin="10,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Categories}" Width="1135" RenderTransformOrigin="0.5,0.5">
                        <ItemsControl.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.234"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ItemsControl.RenderTransform>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#DDD" BorderThickness="1" 
                                    CornerRadius="5" Margin="0,0,0,10" Padding="0"
                                    x:Name="CategoryBorder">
                                    <StackPanel>
                                        <!-- Category info header -->
                                        <Grid Background="#F5F5F5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Expand button -->
                                            <ToggleButton Grid.Column="0" 
                                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                      Width="100" Height="35" Margin="5"
                                                      Background="Transparent" BorderThickness="0"
                                                      Cursor="Hand">
                                                <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center"
                                                       Foreground="#555"
                                                       Text="{Binding IsExpanded, Converter={StaticResource ExpanderIconConverter}}"/>

                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="3">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E8E8E8"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>

                                            <!-- Category info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,10">
                                                <TextBlock FontWeight="Bold" FontSize="15" Margin="0,0,0,3">
                                                <Run Text="{Binding Name, Mode=OneWay}"/>
                                                </TextBlock>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding CategoryTypeDisplay}" Foreground="#3498DB" 
                                                           FontWeight="SemiBold" Margin="0,0,10,0"/>
                                                    <TextBlock Text="|" Foreground="#CCC" Margin="0,0,10,0"/>
                                                    <TextBlock Text="{Binding SexDisplay}" Foreground="#666" Margin="0,0,10,0"/>
                                                    <TextBlock Text="|" Foreground="#CCC" Margin="0,0,10,0"/>
                                                    <TextBlock Text="{Binding AgeRangeDisplay}" Foreground="#666" Margin="0,0,10,0"/>
                                                    <TextBlock Text="|" Foreground="#CCC" Margin="0,0,10,0"/>
                                                    <TextBlock Foreground="#27AE60" FontWeight="SemiBold">
                                                    <Run Text="👥"/>
                                                    <Run Text="{Binding ParticipantCount, Mode=OneWay}"/>
                                                    <Run Text="zawodników"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Merge button -->
                                            <Button Grid.Column="2" 
                                                Command="{Binding MergeCommand}"
                                                Content="🔗 Połącz" 
                                                Background="#3498DB" 
                                                Foreground="White"
                                                FontWeight="SemiBold"
                                                Padding="15,8"
                                                Margin="5"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="5"
                                                                        Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2980B9"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <!-- Initialize Bracket button -->
                                            <Button Grid.Column="3" 
                                                Command="{Binding InitializeBracketCommand}"
                                                Content="🎲 Losuj" 
                                                Background="#F39C12" 
                                                Foreground="White"
                                                FontWeight="SemiBold"
                                                Padding="15,8"
                                                Margin="5"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="5"
                                                                        Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E67E22"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Opacity" Value="0.5"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <!-- Start Competition button -->
                                            <Button Grid.Column="4" 
                                                Command="{Binding StartCompetitionCommand}"
                                                Content="▶️ Start" 
                                                Background="#9B59B6" 
                                                Foreground="White"
                                                FontWeight="SemiBold"
                                                Padding="15,8"
                                                Margin="5"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="5"
                                                                        Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#8E44AD"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Opacity" Value="0.5"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <!-- Delete button -->
                                            <Button Grid.Column="5" 
                                                Command="{Binding DeleteCommand}"
                                                Content="🗑️ Usuń" 
                                                Background="#E74C3C" 
                                                Foreground="White"
                                                FontWeight="SemiBold"
                                                Padding="15,8"
                                                Margin="5"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="5"
                                                                        Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#C0392B"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>



                                        <!-- Participant list (after expanding) -->
                                        <Border Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                                            <ItemsControl ItemsSource="{Binding Category.Participants}" 
                                                      Margin="10,10,10,5">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White" Padding="12,8" Margin="0,0,0,5" 
                                                            BorderBrush="#DDD" BorderThickness="1" CornerRadius="3">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0" Text="{Binding FullName}" 
                                                                       FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"/>
                                                                <Border Grid.Column="1" Background="#E8F5E9" CornerRadius="3" 
                                                                    Padding="8,3" Margin="10,0,5,0">
                                                                    <TextBlock Text="{Binding Age}" Foreground="#27AE60" 
                                                                           FontWeight="SemiBold" FontSize="12"/>
                                                                </Border>
                                                                <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="3" 
                                                                    Padding="8,3" Margin="5,0">
                                                                    <TextBlock Text="{Binding Belt}" Foreground="#F57C00" 
                                                                           FontWeight="SemiBold" FontSize="12"/>
                                                                </Border>
                                                                <TextBlock Grid.Column="3" Text="{Binding Club}" Margin="10,0,10,0" 
                                                                       Foreground="#999" FontStyle="Italic" VerticalAlignment="Center"/>
                                                                
                                                                <!-- Remove participant button -->
                                                                <Button Grid.Column="4"
                                                                        Command="{Binding DataContext.RemoveParticipantCommand, ElementName=CategoryBorder}"
                                                                        CommandParameter="{Binding}"
                                                                        Content="✖"
                                                                        Background="#E74C3C"
                                                                        Foreground="White"
                                                                        FontWeight="Bold"
                                                                        Width="25"
                                                                        Height="25"
                                                                        Padding="0"
                                                                        BorderThickness="0"
                                                                        Cursor="Hand"
                                                                        ToolTip="Usuń zawodnika z kategorii">
                                                                    <Button.Style>
                                                                        <Style TargetType="Button">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="Button">
                                                                                        <Border Background="{TemplateBinding Background}"
                                                                                                CornerRadius="3"
                                                                                                Padding="{TemplateBinding Padding}">
                                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                        </Border>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="#C0392B"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Button.Style>
                                                                </Button>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
