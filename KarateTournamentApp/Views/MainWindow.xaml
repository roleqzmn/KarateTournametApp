<Window x:Class="KarateTournamentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KarateTournamentApp"
        xmlns:models="clr-namespace:KarateTournamentApp.Models"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="Karate Tournament Manager" Height="600" Width="1000" Background="#F0F0F0">

    <Window.Resources>
        <ObjectDataProvider x:Key="BeltsEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Belts"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="SexEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Sex"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="15" BorderBrush="#DDD" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Rejestracja Zawodnika" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"/>

                    <TextBlock Text="Imię:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

                    <TextBlock Text="Nazwisko:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

                    <TextBlock Text="Wiek:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

                    <TextBlock Text="Płeć (obowiązkowa):" FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource SexEnum}}" 
                              SelectedItem="{Binding SelectedSex}" Margin="0,5,0,15" Padding="5"/>

                    <TextBlock Text="Stopień (Pas):" FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource BeltsEnum}}" 
                              SelectedItem="{Binding SelectedBelt}" Margin="0,5,0,15" Padding="5"/>

                    <TextBlock Text="Konkurencje (min. jedna):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ItemsControl ItemsSource="{Binding CategorySelections}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding DisplayName}" 
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                          Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="Klub (opcjonalnie):" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Club}" Margin="0,0,0,20" Padding="5"/>

                    <Button Content="DODAJ ZAWODNIKA" 
                            Command="{Binding AddParticipantCommand}" 
                            Height="40" Background="#27AE60" Foreground="White" FontWeight="Bold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Konkurencje" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" 
                                    CornerRadius="5" Margin="0,0,0,10" Padding="0">
                                <StackPanel>
                                    <!-- Header z informacjami o kategorii -->
                                    <Grid Background="#F5F5F5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Przycisk rozwijania -->
                                        <ToggleButton Grid.Column="0" 
                                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                      Width="100" Height="35" Margin="5"
                                                      Background="Transparent" BorderThickness="0"
                                                      Cursor="Hand">
                                            <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center"
                                                       Foreground="#555"
                                                       Text="{Binding IsExpanded, Converter={StaticResource ExpanderIconConverter}}"/>
                                            
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="3">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E8E8E8"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ToggleButton.Style>
                                        </ToggleButton>

                                        <!-- Informacje o kategorii -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,10">
                                            <TextBlock FontWeight="Bold" FontSize="15" Margin="0,0,0,3">
                                                <Run Text="{Binding Name, Mode=OneWay}"/>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding CategoryTypeDisplay}" Foreground="#3498DB" 
                                                           FontWeight="SemiBold" Margin="0,0,10,0"/>
                                                <TextBlock Text="|" Foreground="#CCC" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding SexDisplay}" Foreground="#666" Margin="0,0,10,0"/>
                                                <TextBlock Text="|" Foreground="#CCC" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding AgeRangeDisplay}" Foreground="#666" Margin="0,0,10,0"/>
                                                <TextBlock Text="|" Foreground="#CCC" Margin="0,0,10,0"/>
                                                <TextBlock Foreground="#27AE60" FontWeight="SemiBold">
                                                    <Run Text="👥"/>
                                                    <Run Text="{Binding ParticipantCount, Mode=OneWay}"/>
                                                    <Run Text="zawodników"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Przycisk łączenia kategorii -->
                                        <Button Grid.Column="2" 
                                                Command="{Binding MergeCommand}"
                                                Content="🔗 Połącz" 
                                                Background="#3498DB" 
                                                Foreground="White"
                                                FontWeight="SemiBold"
                                                Padding="15,8"
                                                Margin="5"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="5"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2980B9"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>

                                    <!-- Lista zawodników (widoczna po rozwinięciu) -->
                                    <Border Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                                        <ItemsControl ItemsSource="{Binding Category.Participants}" 
                                                      Margin="10,10,10,5">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" Padding="12,8" Margin="0,0,0,5" 
                                                            BorderBrush="#DDD" BorderThickness="1" CornerRadius="3">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="{Binding FullName}" 
                                                                       FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"/>
                                                            <Border Grid.Column="1" Background="#E8F5E9" CornerRadius="3" 
                                                                    Padding="8,3" Margin="10,0,5,0">
                                                                <TextBlock Text="{Binding Age}" Foreground="#27AE60" 
                                                                           FontWeight="SemiBold" FontSize="12"/>
                                                            </Border>
                                                            <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="3" 
                                                                    Padding="8,3" Margin="5,0">
                                                                <TextBlock Text="{Binding Belt}" Foreground="#F57C00" 
                                                                           FontWeight="SemiBold" FontSize="12"/>
                                                            </Border>
                                                            <TextBlock Grid.Column="3" Text="{Binding Club}" Margin="10,0,0,0" 
                                                                       Foreground="#999" FontStyle="Italic" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.Template>
                                                <ControlTemplate>
                                                    <ScrollViewer VerticalScrollBarVisibility="Disabled" 
                                                                  HorizontalScrollBarVisibility="Disabled">
                                                        <ItemsPresenter/>
                                                    </ScrollViewer>
                                                </ControlTemplate>
                                            </ItemsControl.Template>
                                        </ItemsControl>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>