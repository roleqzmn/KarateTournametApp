<UserControl x:Class="KarateTournamentApp.Views.DrawResolverView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:converters="clr-namespace:KarateTournamentApp.Converters"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="800"
         Background="#2C3E50">
<UserControl.Resources>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
</UserControl.Resources>
<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <TextBlock Text="ROZSTRZYGANIE REMISU - POJEDYNEK 1v1" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Participants Display -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- AKA (Red) -->
            <Border Grid.Column="0" 
                    Background="#E74C3C" 
                    CornerRadius="15"
                    Padding="30"
                    BorderThickness="5"
                    BorderBrush="#C0392B">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="AKA" 
                               FontSize="48" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="{Binding AkaName}" 
                               FontSize="36" 
                               FontWeight="SemiBold" 
                               Foreground="White" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- VS -->
            <TextBlock Grid.Column="1" 
                       Text="VS" 
                       FontSize="56" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <!-- SHIRO (White) -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="15"
                    Padding="30"
                    BorderThickness="5"
                    BorderBrush="#BDC3C7">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="SHIRO" 
                               FontSize="48" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="{Binding ShiroName}" 
                               FontSize="36" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Judge Buttons -->
        <Grid Grid.Row="2" Margin="40,0,40,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Select AKA Button -->
            <Button Grid.Column="0" 
                    Command="{Binding SelectAkaCommand}"
                    Height="80"
                    Background="#E74C3C"
                    BorderBrush="#C0392B"
                    BorderThickness="3"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="10">
                                        <TextBlock Text="WYBIERZ AKA" 
                                                   FontSize="28" 
                                                   FontWeight="Bold" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Select SHIRO Button -->
            <Button Grid.Column="2" 
                    Command="{Binding SelectShiroCommand}"
                    Height="80"
                    Background="White"
                    BorderBrush="#95A5A6"
                    BorderThickness="3"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="10">
                                        <TextBlock Text="WYBIERZ SHIRO" 
                                                   FontSize="28" 
                                                   FontWeight="Bold" 
                                                   Foreground="#2C3E50"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ECF0F1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Winner Display & Confirm -->
        <Grid Grid.Row="3" Margin="40,0,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Winner Announcement -->
            <Border Grid.Row="0" 
                    Visibility="{Binding IsWinnerSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                    CornerRadius="10"
                    Padding="20"
                    BorderThickness="3">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{Binding WinnerColor}"/>
                        <Setter Property="BorderBrush" Value="{Binding WinnerColor}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding WinnerColor}" Value="Red">
                                <Setter Property="BorderBrush" Value="#C0392B"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding WinnerColor}" Value="White">
                                <Setter Property="BorderBrush" Value="#95A5A6"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding WinnerName}" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding WinnerColor}" Value="White">
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>

            <!-- Confirm Button -->
            <Button Grid.Row="2" 
                    Command="{Binding ConfirmCommand}"
                    Height="70"
                    Background="#27AE60"
                    BorderBrush="#229954"
                    BorderThickness="3"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="10">
                                        <TextBlock Text="POTWIERDZ ZWYCIEZCE" 
                                                   FontSize="28" 
                                                   FontWeight="Bold" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</UserControl>
