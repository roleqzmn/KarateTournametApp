<UserControl x:Class="KarateTournamentApp.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateTournamentApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#F0F0F0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="5" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Wyniki Koncowe" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CategoryName}" 
                           FontSize="20" 
                           Foreground="#95a5a6"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Results List -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Rankings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#ECF0F1" 
                                    BorderBrush="#BDC3C7"
                                    BorderThickness="1"
                                    CornerRadius="5" 
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Rank placeholder - would need indexing -->
                                    <Border Grid.Column="0" 
                                            Background="#3498DB"
                                            Width="50"
                                            Height="50"
                                            CornerRadius="25"
                                            Margin="0,0,15,0">
                                        <TextBlock Text="#" 
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Participant Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Participant.FullName}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Participant.Club}" 
                                                   FontSize="14" 
                                                   Foreground="#7f8c8d"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <!-- Score -->
                                    <Border Grid.Column="2" 
                                            Background="#27AE60"
                                            CornerRadius="5"
                                            Padding="15,10"
                                            Margin="15,0">
                                        <StackPanel>
                                            <TextBlock Text="WYNIK" 
                                                       FontSize="12" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Score, StringFormat={}{0:F2}}" 
                                                       FontSize="24" 
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Judge Scores -->
                                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                        <TextBlock Text="Oceny:" 
                                                   FontSize="12" 
                                                   Foreground="#7f8c8d"
                                                   Margin="0,0,0,5"/>
                                        <ItemsControl ItemsSource="{Binding JudgeScores}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#95a5a6" 
                                                            CornerRadius="3" 
                                                            Padding="8,5"
                                                            Margin="2">
                                                        <TextBlock Text="{Binding StringFormat={}{0:F1}}" 
                                                                   FontSize="12"
                                                                   Foreground="White"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
